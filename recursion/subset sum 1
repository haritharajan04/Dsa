import java.util.*;

class Solution {
    public List<Integer> subsetSums(int[] arr) {
        List<Integer> ans = new ArrayList<>();
        helper(0, 0, arr, ans);
        Collections.sort(ans); // optional
        return ans;
    }

    private void helper(int ind, int sum, int[] arr, List<Integer> ans) {
        if (ind == arr.length) {     // base case: decided for all elements
            ans.add(sum);            // record this subset's sum
            return;
        }

        // 1) pick the current element
        helper(ind + 1, sum + arr[ind], arr, ans);

        // 2) don't pick the current element
        helper(ind + 1, sum, arr, ans);
    }
}
